<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3dcff"
    android:id="@+id/quiz"
    tools:context=".Quiz">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editPanstwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:hint="PAŃSTWO"
        app:layout_constraintBaseline_toBaselineOf="@+id/Sprawdz"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Sprawdz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:height="10dp"
        android:background="@drawable/gradient_sprawdz"
        android:text="@string/Sprawdz"
        android:textColor="#d2e9fc"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editPanstwo"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/Poprzedni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:height="10dp"
        android:background="@drawable/gradient_button_quiz"
        android:text="@string/Powrót"
        android:textColor="#404040"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Nastepny"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Nastepny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/gradient_button_quiz"
        android:text="@string/Nastepne"
        android:textSize="17sp"
        android:textColor="#404040"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Podpowiedz1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/gradient_button_quiz"
        android:text="@string/Podpowiedz1"
        android:textColor="#404040"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Podpowiedz2"
        app:layout_constraintEnd_toStartOf="@+id/Podpowiedz2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Podpowiedz2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/gradient_button_quiz"
        android:text="@string/Podpowiedz2"
        android:textColor="#404040"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Podpowiedz1"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>